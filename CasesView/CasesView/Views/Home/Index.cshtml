@model IEnumerable<CasesView.Models.Case>

@{
    Layout = "/Views/Home/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Все дела";
}
 
<a asp-action="Create" class="btn btn-success">Добавить дело</a>
<table class="table">
    <tr><td>Название дела</td>
                <td>Описание</td>
                 <td>Важность</td>
    <td>
    </tr>
    
    
    @foreach (var item in Model)
    {
        <tr><td>@item.Name</td>
            <td>@item.Description</td>
             <td>@item.Importance</td>
            <td>
                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete"  asp-controller="Home" asp-route-id="@item.Id">Удалить</a>
            </td></tr>
       
    }
    
</table>