@model CasesView.Models.Case
@{
    Layout = "/Views/Home/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Удаление дела";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Название дела</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
 
        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        
        
        <dt>Важность дела</dt>
                <dd>
                    @Html.DisplayFor(model => model.Importance)
                </dd>
    </dl>
 
    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Удалить" />
            </div>
        </form>
    </div>
</div>